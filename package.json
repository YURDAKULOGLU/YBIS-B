{
    "name": "ybis-monorepo",
    "version": "1.0.0",
    "description": "YBIS - Your Business Intelligence System Monorepo",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*",
        "backend"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:packages\" \"npm run dev:backend\" \"npm run dev:mobile\"",
        "dev:backend": "cd backend && npm run dev",
        "dev:mobile": "npm run start",
        "dev:mobile-only": "npm run build:packages && cd apps/mobile && npm start",
        "build": "npm run build:packages && npm run build:backend && npm run build:mobile",
        "deps:check": "node scripts/check-deps.js",
        "deps:fix": "rm -rf node_modules package-lock.json && npm install",
        "reset": "npm run clean && npm install && npm run build:packages",
        "build:packages": "npm run build --workspace @ybis/api-client && npm run build --workspace @ybis/core && npm run build --workspace @ybis/ui && npm run build --workspace @ybis/workflows",
        "build:backend": "cd backend && npm run build",
        "build:mobile": "cd apps/mobile && npm run build",
        "test": "npm run test --workspaces --if-present",
        "lint": "npm run lint --workspaces --if-present",
        "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
        "predev": "npm run build:packages",
        "dev:packages": "concurrently \"npm run dev --workspace @ybis/api-client\" \"npm run dev --workspace @ybis/core\" \"npm run dev --workspace @ybis/ui\" \"npm run dev --workspace @ybis/workflows\"",
        "prepare": "husky",
        "type-check": "npm run type-check --workspaces --if-present",
        "start": "npx react-native start --config ./react-native.config.js --projectRoot apps/mobile"
    },
    "devDependencies": {
        "@babel/core": "^7.25.9",
        "@babel/plugin-transform-export-namespace-from": "^7.27.1",
        "@babel/plugin-transform-runtime": "^7.25.9",
        "@babel/preset-env": "^7.25.9",
        "@react-native-community/cli": "^14.1.0",
        "@react-native-community/cli-platform-android": "^20.0.2",
        "@react-native/babel-preset": "^0.81.4",
        "@react-native/codegen": "^0.81.4",
        "@react-native/eslint-config": "^0.81.4",
        "@react-native/gradle-plugin": "^0.81.4",
        "@react-native/metro-config": "^0.81.4",
        "@react-native/typescript-config": "^0.81.4",
        "@testing-library/jest-native": "^5.4.3",
        "@testing-library/react-native": "^12.8.1",
        "@tsconfig/react-native": "^3.0.6",
        "@types/cors": "^2.8.17",
        "@types/jest": "^30.0.0",
        "@types/node": "22.10.2",
        "@types/react": "^19.0.0",
        "@types/react-test-renderer": "^19.0.0",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "babel-jest": "^29.7.0",
        "babel-plugin-module-resolver": "^5.0.2",
        "concurrently": "^8.2.2",
        "cross-env": "^10.0.0",
        "eslint": "8.57.1",
        "eslint-plugin-jest": "^27.9.0",
        "eslint-plugin-react-native": "^4.1.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^16.1.6",
        "nx": "^21.5.2",
        "prettier": "^3.6.2",
        "react-test-renderer": "19.1.0",
        "semver": "^7.7.2",
        "ts-jest": "^29.2.6",
        "typescript": "5.9.2",
        "vercel": "^39.2.4"
    },
    "engines": {
        "node": ">=20.19.4",
        "npm": ">=10.0.0"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --max-warnings=0 --fix"
        ]
    },
    "volta": {
        "node": "20.11.0",
        "npm": "10.2.4"
    },
    "dependencies": {
        "@babel/runtime": "^7.28.4",
        "@hookform/resolvers": "^5.2.2",
        "@react-native-async-storage/async-storage": "2.0.0",
        "@react-navigation/bottom-tabs": "^7.4.7",
        "@react-navigation/native": "^7.1.17",
        "@react-navigation/stack": "^7.4.7",
        "@upstash/redis": "^1.35.3",
        "@ybis/api-client": "1.0.0",
        "@ybis/core": "1.0.0",
        "axios": "1.12.2",
        "cors": "^2.8.5",
        "date-fns": "^4.1.0",
        "drizzle-orm": "^0.38.2",
        "helmet": "^8.0.0",
        "hono": "^4.6.14",
        "i18n-js": "^4.5.1",
        "jose": "^5.9.6",
        "nanoid": "^5.1.5",
        "postgres": "^3.4.5",
        "react": "19.1.0",
        "react-hook-form": "^7.62.0",
        "react-native": "0.81.4",
        "react-native-gesture-handler": "2.28.0",
        "react-native-markdown-display": "^7.0.2",
        "react-native-reanimated": "3.19.1",
        "react-native-safe-area-context": "5.6.1",
        "react-native-screens": "4.16.0",
        "react-native-vector-icons": "^10.3.0",
        "zod": "4.1.8",
        "zustand": "^5.0.8"
    }
}
